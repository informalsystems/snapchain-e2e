{
	"provider": "digital-ocean",
	"network": "${subnet}",
    "${cc.name}": {
        "public_ip": "${cc.ip}",
        "private_ip": "${cc.internal_ip}"
    },
	"instances": ${jsonencode({
        for n in nodes:
            "${n.name}" => {
                "ext_ip_address": "${n.ip}",
                "ip_address": "${n.internal_ip}",
                "rpc_port": 26657
            }
        })}
}
